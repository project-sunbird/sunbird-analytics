# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# General APIs
GET	/health @controllers.Application.checkAPIhealth
POST /content/recommend @controllers.Application.recommendations

# System APIs
POST /content/vectors/:contentId   @controllers.Application.contentToVec(contentId: String)
POST /train/content-to-vec @controllers.Application.contentToVecTrainModel
POST /train/recommendations @controllers.Application.recommendationsTrainModel
POST /run/:job @controllers.Application.runJob(job: String)
POST /replay/:job/:from/:to @controllers.Application.replayJob(job: String, from: String, to: String)

# Metrics APIs
POST /metrics/content-usage @controllers.Metrics.contentUsage
POST /metrics/content-popularity @controllers.Metrics.contentPopularity
POST /metrics/item-usage @controllers.Metrics.itemUsage
POST /metrics/genie-launch @controllers.Metrics.genieLaunch
POST /metrics/list/content @controllers.Metrics.contentList
POST /metrics/tag/:tagId @controllers.Application.registerTag(tagId: String)
DELETE /metrics/tag/delete/:tagId @controllers.Application.deleteTag(tagId: String)

# Data Exhaust
POST /dataset/request @controllers.JobController.dataRequest
GET /dataset/request/read/:clientKey/:requestId @controllers.JobController.getJob(clientKey: String, requestId: String)
GET /dataset/request/list/:clientKey @controllers.JobController.getJobList(clientKey: String)